generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Supplier {
  id        String   @id @default(cuid())
  name      String
  gst       String?
  contact   String?
  address   String?
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
  returns   Return[]
}

model Category {
  id           String   @id @default(cuid())
  name         String
  defaultPrice Float
  active       Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Order {
  id         String      @id @default(cuid())
  date       DateTime    @default(now())
  supplierId String
  supplier   Supplier    @relation(fields: [supplierId], references: [id])
  items      OrderItem[]
  notes      String?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model OrderItem {
  id           String   @id @default(cuid())
  orderId      String
  order        Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  categoryName String
  price        Float
  quantity     Int
  total        Float // Store calculated total in case prices change
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Return {
  id           String   @id @default(cuid())
  date         DateTime @default(now())
  supplierId   String
  supplier     Supplier @relation(fields: [supplierId], references: [id])
  categoryName String
  price        Float
  quantity     Int
  reason       String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Settings {
  id             String  @id @default(cuid())
  companyName    String  @default("My Company")
  companyGst     String?
  companyAddress String?
  currencySymbol String  @default("â‚¹")
  updatedAt      DateTime @updatedAt
}
